}

auto pyObjectUnicode(PyObject* obj) @nogc nothrow {
    static if(isPython2)
        return PyObject_Unicode(obj);
    else
        return obj;
}

auto pyUnicodeGetSize(PyObject* obj) @nogc nothrow {
    return PyUnicode_GetSize(obj);
