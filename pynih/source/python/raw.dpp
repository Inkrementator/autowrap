auto pyUnicodeFromStringAndSize(const(char)* ptr, Py_ssize_t size) {
    return PyUnicode_FromStringAndSize(ptr, size);
}

auto pyObjectNew(T)(PyTypeObject* typeobj) {
    return cast(T*) _PyObject_New(typeobj);
}


