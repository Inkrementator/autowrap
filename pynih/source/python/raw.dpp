// Demacroify
void pyIncRef(PyObject* obj) @nogc nothrow {
    // had to hand translate due to static inline C function
    obj.ob_refcnt++;
}

// Demacroify
void pyDecRef(PyObject* obj) @nogc nothrow {
    // FIXME: d++ can't translate this due to `;` for an empty statement
